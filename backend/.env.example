## Copy this file to .env and fill with environment-specific values.
## Use strong random strings for secrets and test-only credentials for non-prod.

# Runtime
APP_ENV=local
SERVER_PORT=8080

# Database
DB_DSN=postgres://aiapp:aiapp@localhost:5432/aiapp?sslmode=disable
DB_MAX_CONNS=10

# Redis
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=

# Auth & admin
JWT_SECRET=change-me
AUTH_JWT_SECRET=
ADMIN_SECRET=admin-secret
ADMIN_ACCESS_KEY=admin-access-key
FRONTEND_ORIGIN=http://localhost:3000
DEFAULT_MODEL_ID=

# Bootstrap admin (use strong test creds; leave empty in production to disable)
ADMIN_BOOTSTRAP_USERNAME=admin
ADMIN_BOOTSTRAP_PASSWORD=change-me
ADMIN_BOOTSTRAP_EMAIL=admin@example.com
ADMIN_BOOTSTRAP_NICKNAME=Admin

# Uploads
UPLOAD_DIR=uploads

# Payments (required unless you add a bypass)
PAY_GATEWAY=https://pay-gateway.example.com
PAY_MERCHANT_ID=test-merchant-id
PAY_KEY=test-merchant-key
PAY_NOTIFY_URL=http://localhost:8080/api/store/payments/notify
PAY_RETURN_URL=http://localhost:8080/api/store/payments/return
COINS_PER_YUAN=1000

# SMTP for email verification/reset (required in production)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=no-reply@example.com
SMTP_PASS=your-smtp-password
SMTP_FROM="Persona Studio <no-reply@example.com>"

# Debug flags
DEBUG_PROMPT=false
